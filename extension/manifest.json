{
  "manifest_version": 3,
  "name": "OmniVision AI - Popup",
  "version": "0.0.1",
  "description": "Popup UI for OmniVision AI (Dev build)",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "tabCapture",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OmniVision"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "all_frames": false,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "public/icon.png",
    "48": "public/icon.png",
    "128": "public/icon.png"
  }
}